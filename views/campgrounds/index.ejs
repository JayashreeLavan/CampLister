<% include ../partials/header %>

<h1>Campgrounds</h1>


<header class="jumbotron">
    <div class="container">
<h1>Welcome to YelpCamp!</h1>
<p>Finding the best spots ... just for you!</p>
<div>
<a  class="btn btn-primary btn-lg" href="/campgrounds/new"> Add a new Campground</a>
</div>
</div>
</header>

<div class="row text-center" style="display:flex;  flex-wrap:wrap;" >
 
   <% campgrounds.forEach(function(result){ %>

    <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
        <img src ="<%= result["image"] %>">
            <div class="caption">
            <h4><%= result["name"] %></h4>
            <a href="/campgrounds/<%= result._id %>" class="btn btn-primary"> More Info</a>
            </div>
        </div>
    </div>
    <% }) %>

    
</div>




<% include ../partials/footer %>